<AnchorPane id="AnchorPane" prefHeight="522.0" prefWidth="597.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.team1.casino.Controller.AuthenticationController">
   <children>
      <ImageView fitHeight="582.0" fitWidth="609.0" layoutX="-2.0" layoutY="-50.0" pickOnBounds="true">
         <image>
            <Image url="@../images/loginBackground.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="accessCodeInput" layoutX="219.0" layoutY="228.0" promptText="Access Code" />
      <Text fill="WHITE" layoutX="109.0" layoutY="156.0" strokeType="OUTSIDE" strokeWidth="0.0" text="We have sent you your AccessCode">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
      </Text>
      <Button fx:id="submitButton" layoutX="215.0" layoutY="329.0" mnemonicParsing="false" onAction="#checkAccessCode" text="Zugangscode überprüfen" />
   </children>
</AnchorPane>
